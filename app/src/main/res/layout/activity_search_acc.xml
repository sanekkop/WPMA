<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ChoiseWork.Accept.ItemCard">

    <TextView
        android:id="@+id/shapka"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="Приемка товара"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.99" />

    <TableLayout
      android:id="@+id/tableLayout"
      android:layout_width="0dp"
      android:layout_height="0dp"

      android:background="#40e0d0"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHeight_percent="0.18"
      app:layout_constraintHorizontal_bias="0.012"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.064"
      app:layout_constraintWidth_percent="0.6">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000" />

  </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="540dp"
        app:layout_constraintBottom_toTopOf="@+id/tabCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toEndOf="@id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/shapka"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="0.4">

        <TableRow android:background="#FFF000">

            <TextView
                android:id="@+id/zonaHand"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="16sp" />

        </TableRow>

        <TableRow android:background="#FFF000">

            <TextView
                android:id="@+id/zonaTech"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:textSize="16sp"
                android:textColor="#000" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="end"
                android:padding="5dp"
                android:text="Деталей: "
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="0"
                android:textColor="#000" />

        </TableRow>

    </TableLayout>

          <TableLayout
          android:id="@+id/tabCount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintWidth_percent="0.99"
            app:layout_constraintHeight_percent="0.42">

            <TableRow android:paddingBottom="1px">

                <TextView
                    android:id="@+id/textSht"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Шт. "
                    android:gravity="end"
                    android:textSize="18sp"
                    android:textColor="#000"
                    />

                <TextView
                    android:id="@+id/statVod1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:text="1"
                    android:textColor="#000"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/minParty"
                    android:layout_width="0dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:clickable="false"
                    android:id="@+id/resOne"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="false"
                    android:id="@+id/baseSHK"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_weight="2"
                    android:background="#a9a9a9"
                    android:padding="10dp" />

            </TableRow>

            <TableRow android:paddingBottom="1px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Упак. "
                    android:gravity="end"
                    android:textColor="#000" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/numVod1"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/wtfVod1"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="false"
                    android:id="@+id/resTwo"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:background="#4169E1"
                    android:padding="10dp" />

            </TableRow>

            <TableRow android:paddingBottom="1px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Место "
                    android:gravity="end"
                    android:textColor="#000" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/numVod2"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/wtfVod2"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="false"
                    android:id="@+id/resThird"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:background="#a9a9a9"
                    android:padding="10dp" />

            </TableRow>

            <TableRow android:paddingBottom="1px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="Набор "
                    android:gravity="end"
                    android:textColor="#ff0000" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/numVod3"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/wtfVod3"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_marginRight="2dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:background="#a9a9a9"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="false"
                    android:id="@+id/resFor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:background="#ff0000"
                    android:padding="10dp"
                    android:textColor="#ffff"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:background="#a9a9a9"
                    android:padding="10dp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/storageSize"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="#9932cc"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:text="Кол-во"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pricePrih"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Цена:"
                    android:gravity="end"
                    android:textColor="#ff0000"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="Принять"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>